set nu
set relativenumber
set tabstop=4
set expandtab
set nobackup
set ruler
set autoindent
set incsearch " 智能查找
set cursorcolumn
set cursorline                                                                                        
highlight CursorLine   cterm=NONE ctermbg=black ctermfg=NONE guibg=NONE guifg=NONE
highlight CursorColumn cterm=NONE ctermbg=black ctermfg=NONE guibg=NONE guifg=NONE
let loaded_matchparen=1 " 关闭高亮显示匹配的括号
